class Solution {
public:
    vector<int> productExceptSelf(vector<int>& nums) {
        int n = nums.size();
        vector<int> zeros(n,0);
        int count=0;
        int prod=1;
        for(int i=0;i<nums.size();i++){
            if(nums[i]==0){
                count++;
                zeros[i] = 1;
            }
            else if(nums[i]!=0){
                prod = prod * nums[i];

            }
        }
        for(int i=0;i<nums.size();i++){
            if(count==n){
                return nums;
            }
            if(count!=0 && zeros[i]==1){
                if(count-1==0){
                    nums[i]=prod;
                }
                else nums[i]=0;
            }
            else if(count!=0 && zeros[i]==0){
                nums[i]=0;
            }
            else{
                nums[i] = prod/nums[i];
            }
        }
        return nums;
    }
};
